@model EMRApplication.Models.PatientVM.AddMedicationVM
@{
    ViewData["Title"] = "Add medication";
    ViewData["Name"] = Model.PatientName;
    ViewData["DOB"] = Model.DOB.ToShortDateString();
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"].</title>
</head>
<body>
    <form asp-action="AddMedication">
        @Html.ValidationMessageFor(model => model.Medication.Name)<br />
        @Html.LabelFor(model => model.Medication.Name)
        @Html.EditorFor(model => model.Medication.Name)
        <br />
        @Html.LabelFor(model => model.Medication.IsRepeat)
        @Html.EditorFor(model => model.Medication.IsRepeat) <br />
        <input hidden asp-for=@Model.PatientId />
        <input hidden asp-for=@Model.PatientName />
        <input hidden asp-for=@Model.DOB />
        <input type="submit" />
    </form>
</body>
</html>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>